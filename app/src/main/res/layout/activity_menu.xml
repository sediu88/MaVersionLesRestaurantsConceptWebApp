<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MenuActivity">

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/readyToOrderButton"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/passer_la_commande"
        android:onClick="onReadyToOrderButtonClicked"
        android:background="#008000"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/AddToMenuButton" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/AddToMenuButton"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="14dp"
        android:clickable="true"
        android:onClick="onAddToMenuButton"
        app:srcCompat="@drawable/ic_add_black_24dp" />




</RelativeLayout>